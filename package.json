{
  "name": "glace-ui",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "eslint .",
    "test": "pnpm -r run build && pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "docs:dev": "pnpm --filter @glace-ui/docs dev",
    "release": "node scripts/release.js",
    "release:dry": "node scripts/release.js --dry-run",
    "link:global": "pnpm --filter @glace-ui/core link --global && pnpm --filter @glace-ui/vue link --global",
    "dev:link": "pnpm run build && pnpm run link:global"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "rolldown"]
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
