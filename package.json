{
  "name": "glace-ui",
  "private": true,
  "packageManager": "pnpm@10.11.1",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "eslint .",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "docs:dev": "pnpm --filter @glace-ui/docs dev",
    "changeset": "changeset",
    "release": "turbo build && changeset publish"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "rolldown"]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
